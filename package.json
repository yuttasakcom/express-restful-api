{
  "name": "express-restful-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:yuttasakcom/express-restful-api.git",
  "author": "YoProgrammer <yuttasakcom@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev:build": "webpack --watch",
    "dev:server": "nodemon --watch build --exec \"node build/bundle.js\"",
    "dev": "npm-run-all --parallel dev:*",
    "build": "webpack",
    "test": "jest --forceExit",
    "cover": "jest --coverage --forceExit",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls",
    "start": "npm run build && node build/bundle.js"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env",
          "stage-2",
          {
            "plugins": [
              "transform-class-properties"
            ]
          }
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "connect-ensure-login": "^0.1.1",
    "cookie-session": "^2.0.0-beta.3",
    "crypto": "^1.0.1",
    "dotenv": "^5.0.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-rate-limit": "^2.11.0",
    "helmet": "^3.12.0",
    "mongoose": "^5.0.9",
    "morgan": "^1.9.0",
    "oauth2orize": "^1.11.0",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.0",
    "expect": "^22.4.0",
    "jest": "^22.4.2",
    "nodemon": "^1.15.1",
    "npm-run-all": "^4.1.2",
    "supertest": "^3.0.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-node-externals": "^1.6.0"
  }
}
